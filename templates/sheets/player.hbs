<div class="main">
    <div class="leftcolumn">
        <div class="title-line">
            <h1 class="column-title">{{localize "CLEENMAIN.label.skills"}}
                {{#if unlocked}}
                <a class="item-create right-icon" data-action="itemCreate" data-type="skill" title="{{localize 'CLEENMAIN.skill.add'}}"><i
                        class="fas fa-plus"></i></a>
                {{/if}}
            </h1>
        </div>
        {{#if unlocked}}
        <div class="skills item-list">
            {{#each skills as |skill type|}}
            <div class="skill-line item draggable" data-item-id="{{_id}}">
                <input class="skillEdit skill-name draggable" data-field="name" type="text" value="{{skill.name}}"
                    data-dtype="Text" data-item-id="{{_id}}" />
                <input class="skillEdit skill-value" data-field="system.base" type="number"
                    name="skill.system.base" value="{{skill.system.base}}" data-dtype="Number" />
                {{#ifn ../xprules}}<input title="{{localize 'CLEENMAIN.skill.isDeveloped'}}"
                    class="skillEdit skill-dev checkbox" data-field="system.developed"
                    name="skill.system.developed" type="checkbox" {{checked skill.system.developed}}>{{/ifn}}
                <input title="{{localize 'CLEENMAIN.skill.isPhysical'}}" class="skillEdit skill-physical checkbox"
                    data-field="system.physical" name="skill.system.physical" type="checkbox" {{checked
                    skill.system.physical}}>
                <a data-action="itemDelete" data-item-id="{{_id}}" data-type="skill" title="{{localize 'CLEENMAIN.skill.delete'}}"><i
                        class="fas fa-trash"></i></a>
            </div>
            {{/each}}
        </div>
        {{else}}
        <div class="skills">
            {{#each skills as |skill type|}}
            <div class="skill-line item" data-item-id="{{_id}}">
                <div class="skill-name" title="{{skill.system.description}}">{{skill.name}}</div>
                <div class="skill-value">{{getSkillValue @root.actor skill}}</div>
                {{#ifn ../xprules}}<div><i class="{{getCheckboxIcon  skill.system.developed}}"></i></div>{{/ifn}}
                <a class="skill-roll" data-action="skillRoll" data-item-id="{{_id}}"><i class="fas fa-dice"></i></a>
            </div>
            {{/each}}
        </div>
        {{/if}}
    </div>
    <div class="central">
        <div class="intro-block">
            <div class="intro-block-left">
                <img class="profile-img" src="{{actor.img}}" alt="{{actor.name}}" {{#if unlocked}}data-action="editImage" data-edit="img"{{/if}} title="{{actor.name}}">
            </div>
            <div class="intro-block-right">
                <div class="central-line">
                    <div class="name-text">{{localize "CLEENMAIN.label.character"}} :</div>
                    {{#if unlocked}}
                    <input name="name" type="text" value="{{actor.name}}" placeholder="Name" />
                    {{else}}
                    <div class="pcname">{{actor.name}}</div>
                    {{/if}}
                    <div class="right-icon" data-action="toggleLockMode">
                        <a class="sheet-change-lock" title="{{localize 'CLEENMAIN.label.unlock_sheet'}}">
                            {{#if unlocked}}
                            <i class="fas fa-lock-open"></i>
                            {{else}}
                            <i class="fas fa-lock"></i>
                            {{/if}}
                        </a>
                    </div>
                </div>
                <div class="central-line">
                    <div class="name-text">{{localize "CLEENMAIN.label.activity"}} :</div>
                    {{#if unlocked}}
                    <input id="activity" name="system.activity" type="text" value="{{actorSystem.activity}}" />
                    {{else}}
                    {{#if (isNotEmptyString actorSystem.activity)}}
                    <div class="activity-text">{{actorSystem.activity}}</div>
                    {{/if}}
                    {{/if}}
                </div>
                <div class="central-line space-between">
                    <div class="health-block">
                        <div class="health-text">{{localize "CLEENMAIN.label.health"}} :</div>
                        <input class="health-input" title="{{localize 'CLEENMAIN.health.current'}}" id="health"
                            name="system.health.value" type="number" value="{{actorSystem.health.value}}" />
                        <div class="central-text">/</div>
                        {{#if unlocked}}
                        <input class="health-input" title="{{localize 'CLEENMAIN.health.max'}}" id="health"
                            name="system.health.max" type="number" value="{{actorSystem.health.max}}" />
                        {{else}}
                        <div class="central-text">{{healthMax}}</div>
                        {{/if}}
                        {{#if badShape}}
                        <div class="central-text badshape-text"><a data-action="infoWindow"
                                data-field="badshape">{{localize "CLEENMAIN.health.status.badshape"}}</a> <a
                                data-action="badShapeRoll" data-field="willpower"><i class="fas fa-dizzy"></i></a> <a
                                data-action="badShapeRoll" data-field="resistance"><i class="fas fa-skull"></i></a></div>
                        {{/if}}

                    </div>
                    <div class="wounds-block">
                        <div class="wounds-text">{{localize "CLEENMAIN.label.wounds"}} :</div>
                        <input class="wounds-input" title="{{localize 'CLEENMAIN.label.wounds'}}" id="wounds"
                            name="system.wounds" type="number" value="{{actorSystem.wounds}}" />
                    </div>
                </div>
                <div class="central-line">
                    {{#if useBiotech}}
                    <div class="central-text">{{localize "CLEENMAIN.label.biotechboonuse"}} : </div>
                    <i class="fas fa-dice central-text" data-action="spendBiotechboon"
                        title="{{localize 'CLEENMAIN.label.biotechboonuse'}}"></i>
                    {{else}}
                    <div class="heroism-text"><a data-action="infoWindow" data-field="heroism">{{localize
                            "CLEENMAIN.label.heroism"}} :</a></div>
                    <div class="input-heroism">
                        <input title="{{localize 'CLEENMAIN.heroism.current'}}" id="heroism"
                            name="system.heroism.value" type="number" value="{{actorSystem.heroism.value}}" />
                        <div class="central-text">/</div>
                        {{#if unlocked}}
                        <input title="{{localize 'CLEENMAIN.heroism.max'}}" id="heroismmax"
                            name="system.heroism.max" type="number" value="{{actorSystem.heroism.max}}" {{#ifn
                            xprules}}readonly{{/ifn}} />
                        {{#ifn xprules}}<input class="checkbox" data-field="system.heroism.developed"
                            name="system.heroism.developed" type="checkbox" {{checked
                            actorSystem.heroism.developed}}>{{/ifn}}
                        {{else}}
                        <div class="central-text">{{actorSystem.heroism.max}}</div>{{#ifn xprules}}<i
                            class="{{getCheckboxIcon actorSystem.heroism.developed}} central-text"></i>{{/ifn}}
                        <i class="fas fa-arrow-down central-text" data-action="spendHeroism"
                            title="{{localize 'CLEENMAIN.heroism.spend'}}"></i>
                        {{/if}}
                    </div>
                    {{/if}}
                    {{#if xprules}}
                    <div class="wounds-block">
                        <div class="wounds-text">{{localize "CLEENMAIN.label.experience"}} :</div>
                        {{#if unlocked}}
                        <input class="wounds-input" title="{{localize 'CLEENMAIN.label.experience'}}"
                            id="experience" name="system.experience" type="number"
                            value="{{actorSystem.experience}}" />&nbsp;/&nbsp;<input class="wounds-input"
                            title="{{localize 'CLEENMAIN.label.experience_total'}}" id="experience_total"
                            name="system.experience_total" type="number" value="{{actorSystem.experience_total}}" />
                        {{else}}
                        <div class="central-text">
                            {{actorSystem.experience}}&nbsp;/&nbsp;{{actorSystem.experience_total}}</div>
                        {{/if}}
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
        <nav class="sheet-tabs tabs tablist" aria-roledescription="{{localize 'SHEETS.FormNavLabel'}}">
            {{#each tabs as |tab|}}
            <a class="tab-name {{tab.cssClass}}" data-action="tab" data-group="{{tab.group}}" data-tab="{{tab.id}}"
                {{#if tab.tooltip}}data-tooltip="{{tab.tooltip}}"{{/if}}>
                {{#if tab.icon}}<i class="{{tab.icon}}"></i>{{/if}}
                {{#if tab.label}}<label>{{localize tab.label}}</label>{{/if}}
            </a>
            {{/each}}
        </nav>
        <section class="sheet-body">
                <div class="tab combat {{tabs.combat.cssClass}}" data-group="primary" data-tab="combat">
                {{> "systems/cleenmain/templates/sheets/partials/combat.hbs" }}
                </div>
                <div class="tab boons {{tabs.boons.cssClass}}" data-group="primary" data-tab="boons">
                {{> "systems/cleenmain/templates/sheets/partials/boons.hbs" }}
                </div>
                <div class="tab equipment {{tabs.equipment.cssClass}}" data-group="primary" data-tab="equipment">
                {{> "systems/cleenmain/templates/sheets/partials/equipment.hbs" }}
                </div>
                <div class="tab bio {{tabs.bio.cssClass}}" data-group="primary" data-tab="bio">
                {{> "systems/cleenmain/templates/sheets/partials/bio.hbs" }}
                </div>
                <div class="tab notes {{tabs.notes.cssClass}}" data-group="primary" data-tab="notes">
                {{> "systems/cleenmain/templates/sheets/partials/notes.hbs" }}
                </div>
        </section>
    </div>
</div>